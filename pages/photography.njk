{% extends "layouts/default.njk" %}
{% set title = 'Photography' %}
{% set description = 'Matt Turco is a front end developer at Gallup in Omaha, Nebraska.' %}

{% block head %}
<link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:300,400">
