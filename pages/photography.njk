<div class="Gallery-viewer"></div>
{% endblock %}

{% block scripts %}
<script src="js/photography.js" inline></script>
{% endblock %}

{% macro image(suffix) %}
<div class="Gallery-imageWrapper">
  <a class="Gallery-image"
    data-preview="//res.cloudinary.com/mturco/image/upload/c_scale,f_auto,q_auto:low,w_20/{{ suffix }}"
    data-thumb="//res.cloudinary.com/mturco/image/upload/c_scale,f_auto,q_auto,w_480/{{ suffix }}"
    data-full="//res.cloudinary.com/mturco/image/upload/f_auto,q_auto:best/{{ suffix }}"
    data-loaded="0"
    href="//res.cloudinary.com/mturco/image/upload/f_auto,q_auto:best/{{ suffix }}">
    <noscript>
      <img src="//res.cloudinary.com/mturco/image/upload/c_scale,f_auto,q_auto,w_480/{{ suffix }}">
    </noscript>
  </a>
</div>
{% endmacro %}
